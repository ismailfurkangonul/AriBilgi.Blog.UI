@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Kategori Düzenle</h1>

<ol class="breadcrumb mb-4">
   <li class="breadcrumb-item"><a href="/Admin/Home/Index">Admin Paneli</a></li>
    <li class="breadcrumb-item"><a href="/Admin/Category/Index">Kategoriler</a></li>
     <li class="breadcrumb-item active">Kategori Düzenle</li>
</ol>

<div class="col-12" ng-app="CategoryEditApp" ng-controller="CategoryEditController">
    
    <div class="form-group">
        <label>Kategori Başlığını Giriniz:</label>
        <input class="form-control" ng-model="category.title" />
    </div>

     <div class="form-group">
        <label>Kategori Açıklamasını Giriniz:</label>
        <input class="form-control" ng-model="category.content" />
    </div>

    <div class="form-group">
        <a ng-click="CategoryEdit()" class="btn btn-primary">Kaydet</a>
    </div>


</div>

@section Scripts{
    <script src="~/Admin/pages/categoryEdit.js"></script>
}