@{
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-4">Makaleler</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/Admin/Home/Index">Admin Paneli</a></li>
    <li class="breadcrumb-item active">Makaleler</li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Makaleler Tablosu

        <div class="float-right">
            <a href="/Admin/Article/Add" class="btn btn-primary">Yeni Ekle</a>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive" ng-app="ArticleApp" ng-controller="ArticleController">
            <table class="table table-bordered" id="dtArticle" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı</th>
                        <th>Kategori Adı</th>
                        <th>Yazar</th>
                        <th>Yorum Sayısı</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="article in ArticleList">
                        <td>
                            {{article.id}}
                        </td>
                        <td>
                            {{article.title}}
                        </td>
                        <td>
                            {{article.category.title}}
                        </td>
                        <td>
                            {{article.user.name}} {{article.user.surname}}
                        </td>
                        <td>
                            {{article.commentCount}}
                        </td>
                        <td>
                            <a ng-click="ArticleDelete(article.id)" class="btn-sm btn-danger">Sil</a>
                            <a href="/Admin/Article/Edit?Id={{article.id}}" class="btn-sm btn-warning">Düzenle</a>
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Admin/pages/article.js"></script>
}